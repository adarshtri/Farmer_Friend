<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.thenewboston.kirusa_test.Activities.sign_in_activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:id="@+id/sign_in_textview" />
        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_below="@+id/sign_in_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo"
            />


            <!--Dummy layout for not focusing on
            Edit text-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_centerInParent="true"
                android:id="@+id/phone_layout">
            <!-- End of dummy layout -->
            <ImageView
                android:id="@+id/phoneIdLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_phone_white_24dp" />
            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/phoneIdLogo"
                android:backgroundTint="@android:color/white"
                android:hint="Phone"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/password_layout"
            android:layout_below="@+id/phone_layout">
            <!-- End of dummy layout -->
            <ImageView
                android:id="@+id/passwordLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_lock_outline_white_24dp" />
            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/phoneIdLogo"
                android:backgroundTint="@android:color/white"
                android:hint="Password"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="12dp"
            android:text="Login"
            android:textColor="@android:color/white"
            android:layout_below="@+id/password_layout"
            android:layout_margin="20dp"
            android:onClick="submit"/>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>

